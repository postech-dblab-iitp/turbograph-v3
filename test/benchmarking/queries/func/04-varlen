MATCH (a:Person)-[r:KNOWS*2]->(b:Person) RETURN a,b LIMIT 1;
MATCH (a:Person)-[r:KNOWS*1..3]->(b:Person) RETURN a,b LIMIT 1;
MATCH (a:Person)-[r:KNOWS*1..2]->(b:Person) RETURN a.firstName, b.firstName LIMIT 1;
MATCH (a:Person)-[r:KNOWS*0..8]->(b:Person) RETURN a.firstName, b.firstName LIMIT 1;
// infinite hop
MATCH (a:Person)-[r:KNOWS*]->(b:Person) RETURN a,r,b LIMIT 1;
